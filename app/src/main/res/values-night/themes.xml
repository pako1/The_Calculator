<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.The_Calculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorSecondaryDark</item>
        <item name="background">@color/black</item>

    </style>

    <!--Change the component's shape by overriding the style of the component-->
    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!--All buttons style-->
    <style name="calculator_button_style" parent="">
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/textColorDark</item>
        <item name="cornerRadius">40dp</item>
    </style>


</resources>